{
  "name": "mergin",
  "private": true,
  "workspaces": [
    "packages/lib",
    "packages/admin-lib",
    "packages/app",
    "packages/admin-app",
    "packages/*"
  ],
  "scripts": {
    "dev": "yarn workspace @mergin/app dev",
    "preview": "yarn workspace @mergin/app preview",
    "dev:admin": "yarn workspace @mergin/admin-app dev",
    "preview:admin": "yarn workspace @mergin/admin-app preview",
    "build:all": "yarn build:libs:prod && yarn build",
    "build:all:dev": "yarn build:libs && yarn build:dev",
    "build:all:admin": "yarn build:libs:prod && yarn build:admin",
    "build:all:admin:dev": "yarn build:libs && yarn build:admin:dev",
    "build:libs": "yarn workspaces run clean && yarn workspaces run build:lib:all",
    "build:libs:noadmin": "yarn clean:libs:noadmin && yarn workspace @mergin/lib build:lib:all",
    "build:libs:prod": "yarn workspaces run clean && yarn workspaces run build:lib:all:prod",
    "build": "yarn workspace @mergin/app build",
    "build:dev": "yarn workspace @mergin/app build:dev",
    "build:admin": "yarn workspace @mergin/admin-app build",
    "build:admin:dev": "yarn workspace @mergin/admin-app build:dev",
    "clean:libs": "yarn workspace @mergin/lib clean && yarn workspace @mergin/admin-lib clean",
    "clean:libs:noadmin": "yarn workspace @mergin/lib clean",
    "lint": "yarn workspace @mergin/app lint",
    "i18n:report": "yarn workspace @mergin/app 18n:report",
    "types:libs": "yarn workspaces run build:types",
    "types:lib": "yarn workspace @mergin/lib build:types",
    "types:admin-lib": "yarn workspace @mergin/admin-lib build:types",
    "watch:lib": "yarn workspace @mergin/lib build:lib:watch",
    "watch:lib:types": "yarn workspace @mergin/lib build:types:watch",
    "watch:admin-lib:types": "yarn workspace @mergin/admin-lib build:types:watch",
    "watch:admin-lib": "yarn workspace @mergin/admin-lib build:lib:watch"
  },
  "devDependencies": {
    "@babel/core": "^7.17.9",
    "@esbuild-plugins/node-globals-polyfill": "^0.2.3",
    "@esbuild-plugins/node-modules-polyfill": "^0.2.2",
    "@fortawesome/fontawesome-free": "^6.1.1",
    "@typescript-eslint/eslint-plugin": "^5.4.0",
    "@typescript-eslint/parser": "^5.4.0",
    "@vitejs/plugin-vue": "^4.2.3",
    "@vue/eslint-config-standard": "^8.0.1",
    "@vue/eslint-config-typescript": "^11.0.2",
    "@vue/test-utils": "1.0.0-beta.30",
    "adm-zip": "^0.5.9",
    "agent-base": "^6.0.2",
    "autoprefixer": "^10.4.14",
    "babel-jest": "^27.5.1",
    "buffer": "^6.0.3",
    "chalk": "^4.1.2",
    "concurrently": "^8.0.1",
    "copy-webpack-plugin": "^11.0.0",
    "cross-env": "^7.0.3",
    "cypress": "^9.3.1",
    "cypress-file-upload": "^5.0.8",
    "cypress-image-snapshot": "^4.0.1",
    "cypress-qase-reporter": "^1.4.1",
    "dotenv": "^14.3.0",
    "dotenv-expand": "^5.1.0",
    "eslint": "^8.37.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-vue": "^9.10.0",
    "events": "^3.3.0",
    "https-browserify": "^1.0.0",
    "jest": "^27.1.0",
    "npm-run-all": "^4.1.5",
    "path-browserify": "^1.0.1",
    "postcss": "^8.4.21",
    "prettier": "2.6.0",
    "process": "^0.11.10",
    "rimraf": "^3.0.2",
    "rollup-plugin-copy": "^3.4.0",
    "sass": "^1.62.1",
    "smtp-tester": "1.2.0",
    "stream-http": "^3.2.0",
    "tsc-alias": "^1.8.6",
    "typescript": "^5.0.4",
    "url": "^0.11.0",
    "vite": "^4.3.5",
    "vite-plugin-dts": "^2.2.0",
    "vite-plugin-vuetify": "^1.0.2",
    "vue-tsc": "^1.6.5",
    "vue-typegen": "^0.2.0",
    "webpack-node-externals": "^3.0.0"
  },
  "version": "0.0.0"
}
